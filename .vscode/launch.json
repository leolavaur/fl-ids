{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Eiffel experiment",
            "type": "python",
            "request": "launch",
            "module": "eiffel",
            "args": [
                "--config-dir",
                "${workspaceFolder}/exps/${input:experiment}/src/",
            ],
            "justMyCode": true
        },
        {
            "name": "Eiffel",
            "type": "python",
            "request": "launch",
            "module": "eiffel",
            "args": [
                "dataset=${input:dataset}",
            ],
            "justMyCode": true
        },
    ],
    "inputs": [
        {
            "id": "experiment",
            "type": "pickString",
            "description": "Select the experiment to run",
            "options": [
                {
                    "label": "PCA-FL",
                    "value": "pca"
                }
            ]
        },
        {
            "id": "dataset",
            "type": "pickString",
            "description": "Select the dataset to run",
            "options": [
                {
                    "label": "BoT-IoT",
                    "value": "nfv2.sampled.botiot"
                },
            ]
        }
    ]
}